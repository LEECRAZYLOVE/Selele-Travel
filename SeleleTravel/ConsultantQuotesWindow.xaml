    <Grid Background="#FFFFF485">
        <TabControl x:Name="Consultant_tabControl" Margin="0,40,0,0">
            <!--Client Details-->
            <TabItem Header="Client Details" Style="{DynamicResource TabItemStyle}" >
                <Grid Background="#eee">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!--Left Hand Side-->
                    <StackPanel>
                        <TextBlock Text="Enter Client Details" Margin="10" FontSize="20" HorizontalAlignment="Center"/>
                        <!--Name and surname-->
                        <DockPanel>
                            <TextBlock Text="Name :" FontSize="16" Margin="5"/>
                            <TextBox x:Name="txbNewClient_name" Width="200" Margin="5" Padding="5" Height="30"/>
                            <TextBlock Text="Surname :" FontSize="16" Margin="5"/>
                            <TextBox x:Name="txbNewClient_surname" Margin="5" Padding="5" Height="30"/>
                        </DockPanel>
                        <!--CheckBoxes-->
                        <StackPanel Orientation="Horizontal" >
                            <CheckBox x:Name="ckbBusiness" Content="Business" Margin="200 5 0 0" />
                            <CheckBox x:Name="ckbIndividual" Content="Individual" Margin="5 5 5 0"/>
                        </StackPanel>
                        <!--Address-->
                        <DockPanel>
                            <TextBlock Text="Address" FontSize="16" Margin="10"/>
                            <TextBox x:Name="txbNewClient_address" Margin="10" Height="100"/>
                        </DockPanel>
                        <!--City, Area Code-->
                        <DockPanel>
                            <TextBlock Text="City :" FontSize="16" Margin="10 10 35 10"/>
                            <TextBox x:Name="txbNewClient_city" Width="250" Margin="10"/>
                            <TextBlock Text="Area Code :" FontSize="16" Margin="10"/>
                            <TextBox x:Name="txbNewClient_areaCode" Margin="10" Height="40"/>
                        </DockPanel>
                        <!--Province-->
                        <DockPanel >
                            <TextBlock Text="Province :" Margin="10 10 20 10"/>
                            <ComboBox x:Name="DropBxNewClient_province" Margin="10">
                                <ComboBoxItem Content="Eastern Cape"/>
                                <ComboBoxItem Content="Free State"/>
                                <ComboBoxItem Content="Gauteng"/>
                                <ComboBoxItem Content="KwaZulu-Natal"/>
                                <ComboBoxItem Content="Limpopo"/>
                                <ComboBoxItem Content="Mpumalanga"/>
                                <ComboBoxItem Content="North West"/>
                                <ComboBoxItem Content="Northern Cape"/>
                                <ComboBoxItem Content="Western Cape"/>
                            </ComboBox>
                        </DockPanel>
                        <!--Contact details-->
                        <StackPanel>
                            <DockPanel>
                                <TextBlock Text="Cellphone :" Margin="10"/>
                                <TextBox x:Name="txbNewClient_cellphone" Margin="10" Height="40"/>
                            </DockPanel>
                        </StackPanel>

                        <StackPanel>
                            <DockPanel>
                                <TextBlock Text="Telephone :" Margin="10 10 8 10"/>
                                <TextBox x:Name="txbNewClient_telephone" Margin="10" Height="40"/>
                            </DockPanel>
                        </StackPanel>
                        <StackPanel>
                            <DockPanel>
                                <TextBlock Text="Fax :" Margin="10 10 50 10"/>
                                <TextBox x:Name="txbNewClient_fax" Margin="10" Height="40"/>
                            </DockPanel>
                        </StackPanel>
                        <StackPanel>
                            <DockPanel>
                                <TextBlock Text="Email :" Margin="10 10 40 10"/>
                                <TextBox x:Name="txbNewClient_email" Margin="10" Height="40"/>
                            </DockPanel>
                        </StackPanel>
                        <Button Content="Add Client" FontSize="20" Width="300"/>
                    </StackPanel>

                    <!--Right hand Side-->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Already a client" FontSize="20" HorizontalAlignment="Center" Margin="10"/>
                        <DockPanel>
                            <TextBox x:Name="txbOldClient_find" Width="400" Height="30" Margin="10"/>
                            <Button x:Name="btnOldClient_find" Content="Search" Margin="10"/>

