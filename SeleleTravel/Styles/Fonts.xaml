<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SeleleTravel"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- Creates a base style for the control elements -->
    <Style TargetType="{x:Type Control}" x:Key="BaseStyle">
        <Setter Property="FontFamily" Value="Segoe UI"/>
    </Style>

    <!-- sets the default style that each should inherit -->
    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type Label}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type ListView}" BasedOn="{StaticResource BaseStyle}"/>

    <system:Double x:Key="FontSizeSmall">15</system:Double>
    <system:Double x:Key="FontSizeRegular">20</system:Double>
    <system:Double x:Key="FontSizeAverage">25</system:Double>
    <system:Double x:Key="FontSizeLarge">30</system:Double>
    <system:Double x:Key="FontSizeXLarge">38</system:Double>
    <system:Double x:Key="FontSizeXxLarge">42</system:Double>
    <system:Double x:Key="FontSizeXxXLarge">44</system:Double>
    <system:Double x:Key="FontSizeXxXxLarge">50</system:Double>
    <system:Double x:Key="FontSizeMasterxXLarge">58</system:Double>



</ResourceDictionary>